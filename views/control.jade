extends layout

block content
  doctype html
  html(lang='en')
    head
      title Fuller Hosting
      link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    body
      .logo-container
        img#logo(src='/images/logo.png')
      .nav
        ul
          li
            a(href='/') Home
          li
            a(href='/products') Products
          li
            a(href='/about') About Us
          li
            a(href='/contact') Contact Us
          li
            a(href='/control') Control Panel
          li
            a(href='/logout') Logout
      br
      .control-container
        h2 Control Panel
          .control-box
            .control1
              .resizable.box(draggable='true')
                h2 Products
                p Product 1
                p Product 2
                p Product 3
              .resizable.box(draggable='true')
                h2 Profile
              .resizable.box(draggable='true')
                h2 Settings
            .control2
              .resizable.box(draggable='true')
                h2 FTP
              .resizable.box(draggable='true')
                h2 Email
              .resizable.box(draggable='true')
                h2 Help
            .control3
              .resizable.box(draggable='true')
                h2 Support
                p Need help? Contact Us as needed
              .resizable.box(draggable='true')
                h2 Contacts
                
              .resizable.box(draggable='true')
                h2 Issue Report